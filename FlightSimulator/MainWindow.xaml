                        </StackPanel>
                    </Border>

                    <Border Background="Black" CornerRadius="10" BorderBrush="Black" BorderThickness="7" Grid.Column="1"  Margin="10">
                        <StackPanel Grid.Column="1" Margin="10" Background="white">
                            <Label HorizontalAlignment="Center">VerticalSpeed</Label>
                            <TextBlock Background="Green" Margin="10">"NUMBER"</TextBlock>
                            <Label HorizontalAlignment="Center">AirSpeed</Label>
                            <TextBlock Background="Green" Margin="10">"NUMBER"</TextBlock>
                            <Label HorizontalAlignment="Center">InternalRollDeg</Label>
                            <TextBlock Background="Green" Margin="10">"NUMBER"</TextBlock>
                            <Label HorizontalAlignment="Center">GpsAltitude</Label>
