        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <m:Map CredentialsProvider="Ajvg4QXjjgVzJ0vo51FH6izLF8haGAv0emj1CG3f2YkBr0qk3Z-9FzooB1cPPvJ4" Height="520" BorderBrush="black" BorderThickness="2"></m:Map>

        <Border Background="Gray"  Grid.Column="1" CornerRadius="10" BorderBrush="Gray" BorderThickness="7" Margin="10">
            <StackPanel Grid.Column="1" Background="Gray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="310"/>
                        <RowDefinition Height="230"/>
                    </Grid.RowDefinitions>
                    <Border Background="Black" CornerRadius="10" BorderBrush="Black" BorderThickness="7" Margin="10">
                        <StackPanel Margin="10" Background="white">
                            <Label HorizontalAlignment="Center">HeadingDeg</Label>
                            <TextBlock Background="Green" Margin="10">"NUMBER"</TextBlock>
                            <Label HorizontalAlignment="Center">GroundSpeed</Label>
                            <TextBlock Background="Green" Margin="10">"NUMBER"</TextBlock>
                            <Label HorizontalAlignment="Center">Altitude</Label>
                            <TextBlock Background="Green" Margin="10">"NUMBER"</TextBlock>
                            <Label HorizontalAlignment="Center">InternalPitchDeg</Label>
