                        <StackPanel Grid.ColumnSpan="2" Grid.Row="1" Margin="10" Background="white">
                            <Grid>
                                <Slider Orientation="Horizontal" Height="130" Margin="10,108,190,-108"/>
                                <Slider Orientation="Vertical" Height="130" Margin="270,0,0,0"/>
                                <Label Content="slider1" Margin="0,132,0,-132"/>
                                <Label Content="slider2" Margin="250,132,-250,-132"/>
                            </Grid>
                            
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>








    </Grid>
